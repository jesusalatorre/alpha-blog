<div class="container">
  <% flash.each do |name, msg| %>
    <div class="alert <% if name == "alert" %> alert-danger <% else %> alert-success <% end %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label=Close></button>
    </div>
  <% end %>
</div>